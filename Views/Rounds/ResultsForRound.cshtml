@model SistemaElecciones.Models.RoundDetailsCandidatesViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Resultados de Votacion</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="without-space">
    <div class="wrapper">
        @{
            foreach (var detail in Model.RoundDetails)
            {
               <table>
                   <tr>
                       <td> <img src="~/Photos/@detail.Candidate.photoUrl" alt="@detail.Candidate.Name"/> </td>
                       <td> <span style="font-size: 5em; color: darkblue; text-align: center">@detail.Votes</span></td>
                   </tr>
                   <tr>
                       <td colspan="2">@detail.Candidate.Name</td>
                   </tr>
               </table>
          
            }
        }
    </div>

    @{
        Response.AddHeader("REFRESH", "2, Url=");
    }

    <a class="btn btn-primary" href="~/Rounds">Ir a Rondas</a>
</body>
</html>
