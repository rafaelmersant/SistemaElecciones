@model SistemaElecciones.Models.AvailableRoundsViewModel

@{
    ViewBag.Title = "AvailableRounds";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rondas Disponibles para Elecciones</h2>

@{
    foreach (var round in Model.Rounds)
    {
        <table>
            <tr>
                <td>
                    @Html.ActionLink(String.Format("{0}) {1} -- {2} -- {3}",
                    round.Id, round.Category.Description, round.Candidacy.Description, round.Period),
                    "CandidatesForRound", new { Id = round.Id }, new { @class = "btn btn-primary" })
                </td>

                <td>
                    @Html.ActionLink("Ver Resultados", "ResultsForRound", "Rounds", new { Id = round.Id }, new { @class = "btn btn-primary bg-red" })
                </td>
            </tr>
        </table>
    }
}